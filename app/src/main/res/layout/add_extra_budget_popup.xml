<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="12dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#5499c7">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:rotation="45"
        android:layout_alignParentRight="true"
        android:textColor="#F70B0B"
        android:textSize="35dp"
        android:id="@+id/crossbudget"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:backgroundTint="#1f5276"
        android:layout_below="@id/cross"
        android:id="@+id/AddExpenseTV"/>
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:backgroundTint="#1f5276"
        android:layout_below="@id/AddExpenseTV"
        android:id="@+id/AddExtraExpenseET" />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/SaveExtraExpenseBtn"
        android:layout_below="@id/AddExtraExpenseET"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:background="#1f5276"
        android:textColor="#fff"
        />
    </RelativeLayout>

</android.support.v7.widget.CardView>